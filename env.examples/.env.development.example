# Development Environment Variables
# Copy this file to .env.development and customize as needed

# Environment
NODE_ENV=development
DOCKER_TARGET=development

# Frontend Configuration
FRONTEND_DEV_PORT=3000
METRO_PORT=8081
BACKEND_API_URL=http://localhost:3001

# Backend Configuration
BACKEND_PORT=3001
BACKEND_VOLUMES=./damage-detection-backend:/app,/app/node_modules,./uploads:/app/uploads

# Database Configuration
POSTGRES_VERSION=15-alpine
POSTGRES_DB=damage_detection_dev_db
POSTGRES_USER=dev_user
POSTGRES_PASSWORD=dev_password_123
POSTGRES_PORT=5432
POSTGRES_AUTH_METHOD=trust
POSTGRES_INIT_SCRIPT=./database/init.sql
DEV_SQL_SCRIPTS=./database/dev

# Database Configuration for TypeORM
DB_HOST=postgress
DB_PORT=5432
DB_USERNAME=dev_user
DB_PASSWORD=dev_password_123
DB_DATABASE=damage_detection_dev_db
DB_SYNC=false
DB_LOGGING=true

# Redis Configuration
REDIS_VERSION=7-alpine
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_CONFIG=./redis/redis-dev.conf

# Security (Development - NOT for production)
JWT_SECRET=dev-jwt-secret-key-change-in-production

# Database Connection
DATABASE_URL=postgresql://dev_user:dev_password_123@localhost:5432/damage_detection_dev_db
REDIS_URL=redis://localhost:6379

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# External Services (Development)
GCS_BUCKET=
GOOGLE_APPLICATION_CREDENTIALS=

# Logging
LOG_LEVEL=debug