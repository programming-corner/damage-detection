# Production Environment Variables
# Copy this file to .env.production and customize with secure values

# Environment
NODE_ENV=production
DOCKER_TARGET=production

# Frontend Configuration
FRONTEND_PROD_PORT=3000
BACKEND_API_URL=https://api.yourdomain.com

# Backend Configuration
BACKEND_PORT=3001
BACKEND_VOLUMES=./uploads:/app/uploads

# Database Configuration (Use secure values!)
POSTGRES_VERSION=15-alpine
POSTGRES_DB=damage_detection_db
POSTGRES_USER=damage_user
POSTGRES_PASSWORD=CHANGE_THIS_SECURE_PASSWORD
POSTGRES_PORT=5432
POSTGRES_AUTH_METHOD=scram-sha-256
POSTGRES_INIT_SCRIPT=./database/init.sql

# Redis Configuration
REDIS_VERSION=7-alpine
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_THIS_REDIS_PASSWORD
REDIS_CONFIG=./redis/redis-prod.conf

# Security (CHANGE THESE IN PRODUCTION!)
JWT_SECRET=CHANGE_THIS_TO_SECURE_JWT_SECRET_MINIMUM_32_CHARACTERS

# Database Connection (Update with secure credentials)
DATABASE_URL=postgresql://damage_user:CHANGE_THIS_SECURE_PASSWORD@localhost:5432/damage_detection_db
REDIS_URL=redis://:CHANGE_THIS_REDIS_PASSWORD@localhost:6379

# File Upload Configuration
UPLOAD_DIR=/app/uploads
MAX_FILE_SIZE=10485760

# External Services
GCS_BUCKET=your-production-bucket
GOOGLE_APPLICATION_CREDENTIALS=/app/secrets/gcp-service-account.json

# Nginx Configuration
NGINX_VERSION=alpine
HTTP_PORT=80
HTTPS_PORT=443
NGINX_CONFIG=./nginx/nginx.conf
NGINX_SSL=./nginx/ssl
NGINX_LOGS=./logs/nginx

# Logging
LOG_LEVEL=info

# Health Check URLs
HEALTH_CHECK_URL=http://localhost:3001/health