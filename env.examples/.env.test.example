# Testing Environment Variables
# Copy this file to .env.test and customize as needed

# Environment
NODE_ENV=test
DOCKER_TARGET=test

# Database Configuration (Test database)
POSTGRES_VERSION=15-alpine
POSTGRES_DB=damage_detection_test_db
POSTGRES_USER=test_user
POSTGRES_PASSWORD=test_password
POSTGRES_PORT=5433
POSTGRES_AUTH_METHOD=trust

# Redis Configuration (Test instance)
REDIS_VERSION=7-alpine
REDIS_PORT=6380
REDIS_PASSWORD=

# Security (Test values)
JWT_SECRET=test-jwt-secret-for-testing-only

# Database Connection (Test)
DATABASE_URL=postgresql://test_user:test_password@localhost:5433/damage_detection_test_db
TEST_DATABASE_URL=postgresql://test_user:test_password@localhost:5433/damage_detection_test_db
REDIS_URL=redis://localhost:6380

# File Upload Configuration (Test)
UPLOAD_DIR=./test-uploads
MAX_FILE_SIZE=5242880

# Logging
LOG_LEVEL=silent

# Backend Configuration
BACKEND_PORT=3002