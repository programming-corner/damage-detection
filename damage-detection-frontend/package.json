{
  "name": "damage-detection-app",
  "version": "1.0.0",
  "type": "module",
  "description": "Mobile app for damage detection and reporting",
  "main": "index.js",
  "scripts": {
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "web": "vite --port 3000",
    "start": "react-native start",
    "start:web": "vite --port 3000",
    "build:web": "vite build",
    "preview:web": "vite preview",
    "test": "jest",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "build:android": "cd android && ./gradlew assembleRelease",
    "build:ios": "cd ios && xcodebuild -workspace DamageDetectionApp.xcworkspace -scheme DamageDetectionApp -configuration Release",
    "setup": "./scripts/setup.sh",
    "setup:web": "./scripts/setup.sh web",
    "setup:android": "./scripts/setup.sh android", 
    "setup:ios": "./scripts/setup.sh ios",
    "docker:build": "cd docker && docker-compose build",
    "docker:start": "cd docker && docker-compose up -d",
    "docker:stop": "cd docker && docker-compose down",
    "docker:dev": "./docker/docker-dev.sh"
  },
  "dependencies": {
    "@react-native-async-storage/async-storage": "^1.21.0",
    "@react-navigation/bottom-tabs": "^6.5.11",
    "@react-navigation/native": "^6.1.9",
    "@react-navigation/stack": "^6.3.20",
    "@reduxjs/toolkit": "^2.0.1",
    "@vitejs/plugin-react": "^5.1.3",
    "axios": "^1.6.5",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-native": "0.73.2",
    "react-native-camera": "^4.2.1",
    "react-native-device-info": "^10.12.0",
    "react-native-fs": "^2.20.0",
    "react-native-geolocation-service": "^5.3.1",
    "react-native-gesture-handler": "^2.14.1",
    "react-native-image-picker": "^7.1.0",
    "react-native-paper": "^5.12.3",
    "react-native-permissions": "^4.1.0",
    "react-native-safe-area-context": "^4.8.2",
    "react-native-screens": "^3.29.0",
    "react-native-vector-icons": "^10.0.3",
    "react-native-web": "^0.19.13",
    "react-redux": "^9.1.0",
    "vite": "^7.3.1"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@babel/preset-env": "^7.20.0",
    "@babel/preset-react": "^7.28.5",
    "@babel/preset-typescript": "^7.28.5",
    "@babel/runtime": "^7.20.0",
    "@react-native/eslint-config": "^0.73.1",
    "@react-native/metro-config": "^0.73.2",
    "@tsconfig/react-native": "^3.0.0",
    "@types/react": "^18.2.6",
    "@types/react-dom": "^19.2.3",
    "@types/react-test-renderer": "^18.0.0",
    "babel-jest": "^29.6.3",
    "eslint": "^8.19.0",
    "jest": "^29.6.3",
    "metro-react-native-babel-preset": "0.76.8",
    "prettier": "^2.4.1",
    "react-test-renderer": "18.2.0",
    "typescript": "4.8.4"
  },
  "engines": {
    "node": ">=16"
  },
  "resolutions": {
    "ajv": "^8.12.0",
    "ajv-keywords": "^5.1.0",
    "schema-utils": "^4.0.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
