# Environment Configuration Template
# Copy this file to .env and configure your values

# App Configuration
APP_NAME=Store Management System
APP_VERSION=1.0.0
NODE_ENV=development

# API Configuration
API_BASE_URL=http://localhost:3001/api
API_TIMEOUT=30000

# Database Configuration (if needed)
DATABASE_URL=mongodb://localhost:27017/store_management
DATABASE_NAME=store_management

# File Upload Configuration
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,image/webp

# Camera Configuration
CAMERA_QUALITY=0.8
CAMERA_MAX_WIDTH=1024
CAMERA_MAX_HEIGHT=768

# Geolocation Configuration
ENABLE_GEOLOCATION=true
LOCATION_TIMEOUT=15000

# Report Configuration
MAX_REPORTS_PER_PAGE=20
AUTO_SAVE_DRAFTS=true

# Notification Configuration (if needed)
ENABLE_NOTIFICATIONS=true
NOTIFICATION_SOUND=true

# Development Configuration
DEBUG_MODE=true
LOG_LEVEL=debug

# Security Configuration
ENABLE_ANALYTICS=false
ENABLE_CRASH_REPORTING=false

# Feature Flags
ENABLE_CAMERA_CAPTURE=true
ENABLE_FILE_UPLOAD=true
ENABLE_BATCH_REPORTING=true
ENABLE_EXPORT_REPORTS=true